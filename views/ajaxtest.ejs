<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Document</title>
  <script>
  function senddata() {
    var form = document.getElementById("niceform");
    var input = form.getElementsByName("name")[0].innerHTML;
    document.getElementById("fancy").innerHTML = "working...?";

    //create xhr object for ajax request
    var xhr;
    if (window.XMLHttpRequest) 
      xhr = new XMLHttpRequest();
    else if (window.ActiveXObject) 
      xhr = new ActiveXObject("Msxml2.XMLHTTP");
    else 
      throw new Error("Ajax is not supported by your browser");

    //handle server response
    xhr.onreadystatechange = function () {
      if (xhr.readyState < 4)
        document.getElementById('fancy').innerHTML = "Loading...";
      else if (xhr.readyState === 4) {
        if (xhr.status == 200) 
          document.getElementById('fancy').innerHTML = xhr.responseText;
      }
    }


    xhr.open('POST', '/test');
    xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
    xhr.send("name="+input);
  }
  </script>
</head>
<body>
<p id="fancy">test</p>

<form id="niceform">
<input type="text" name="name" value="bob">
<button type="button" onclick="senddata()">send</button>
</form>
</body>
</html>